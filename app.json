{
  "expo": {
    "name": "Jaiguru-DigiGold",
    "slug": "jaiguruscheme",
    "version": "1.2.2",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "buildNumber": "1",
      "bundleIdentifier": "com.brightechsoftware.jaiguruscheme2",
      "infoPlist": {
        "NSCameraUsageDescription": "Camera access is required to capture images and scan documents.",
        "NSPhotoLibraryUsageDescription": "Photo library access is required to select images.",
        "NSLocationWhenInUseUsageDescription": "Location access is used to provide location-based services.",
        "NSUserTrackingUsageDescription": "Tracking permission is required for personalized content.",
        "UIBackgroundModes": [
          "remote-notification",
          "fetch"
        ]
      }
    },
    "android": {
      "package": "com.brightechsoftware.jaiguruscheme2",
      "versionCode": 23,
      "edgeToEdgeEnabled": true,
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.RECORD_AUDIO"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/icon.png"
    },
    "plugins": [
      "@react-native-community/datetimepicker",
      "@react-native-firebase/app",
      "@react-native-firebase/messaging",
      "@react-native-google-signin/google-signin",
      "expo-font",
      "expo-localization",
      "expo-secure-store",
      "expo-location",
      "expo-camera",
      "expo-image-picker",
      "expo-notifications",
      "expo-asset"
    ],
    "extra": {
      "eas": {
        "projectId": "ce8af2b3-2296-4523-a877-f2c091be1723"
      }
    },
    "owner": "kiruba08"
  }
}
